<h2> Teams Index </h2>
<table>
  <tr>
    <th> Team Name </th>
    <th> Average Player Age</th>
    <th> Home Town </th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td id="team-name-<%= team.id %>"><%= team.nickname %></td>
    <td id="team-average-<%= team.id %>"><%= team.average %></td>
    <td id="team-hometown-<%= team.id %>"><%= team.hometown %></td>
    </tr>

<% end %>
